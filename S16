// Getting input via STDIN
const readline = require("readline");

const inp = readline.createInterface({
  input: process.stdin
});

const userInput = [];

inp.on("line", (data) => {
  userInput.push(data);
});

inp.on("close", () => {
  //start-here
  //Your code goes here â€¦ replace the below line with your code logic 

  //console.log(userInput);
var num=userInput[0]
var hex=parseInt(num,2).toString(10)
var oct=parseInt(hex,10).toString(16)
  console.log(oct)
//const hex=(parseInt(userInput[0])).toString(16)
//console.log(hex)
  //end-here
});